<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity"
    android:background="@color/colorBg">

    <ImageView
        android:id="@+id/Logo_NCORD"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/ncordlogo"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/ET_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="आपले नाव टाइप करा"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/Logo_NCORD"
        android:inputType="text"
        android:textColor="#000"
        android:textColorHint="#000"
        android:paddingStart="10dp"
        android:background="@drawable/bg_edittext"/>


    <EditText
        android:id="@+id/ET_mobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="आपला मोबाइल क्रमांक टाइप करा"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ET_name"
        android:inputType="phone"
        android:textColor="#000"
        android:textColorHint="#000"
        android:paddingStart="10dp"
        android:background="@drawable/bg_edittext"/>

    <EditText
        android:id="@+id/ET_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="आपला ईमेल टाइप करा"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ET_mobile"
        android:inputType="textEmailAddress"
        android:textColor="#000"
        android:textColorHint="#000"
        android:paddingStart="10dp"
        android:background="@drawable/bg_edittext"/>

    <EditText
        android:id="@+id/ET_age"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="आपले वय टाइप करा"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ET_email"
        android:inputType="numberSigned"
        android:textColor="#000"
        android:textColorHint="#000"
        android:paddingStart="10dp"
        android:background="@drawable/bg_edittext"/>

    <Spinner
        android:id="@+id/SPR_gender"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ET_age"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:paddingStart="10dp"
        android:background="@drawable/bg_edittext"/>

    <EditText
        android:id="@+id/ET_emergency_help"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="आपातकालीन संपर्क क्रमांक टाइप करा"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/SPR_gender"
        android:inputType="phone"
        android:textColor="#000"
        android:textColorHint="#000"
        android:paddingStart="10dp"
        android:background="@drawable/bg_edittext"/>

    <EditText
        android:id="@+id/ET_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/ET_emergency_help"
        android:layout_marginTop="20dp"
        android:hint="आपला पासवर्ड टाइप करा"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#000"
        android:paddingStart="10dp"
        android:background="@drawable/bg_edittext"/>

    <Button
        android:id="@+id/BTN_submit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/ET_password"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:text="Register "
        android:textColor="@color/colorWhite"
        android:background="@drawable/bg_button"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/TV_Login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/BTN_submit"
        android:text="लॉगिन करा"
        android:gravity="center"
        android:textSize="18dp"/>

</RelativeLayout>