<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".D_P_Activity"
    android:background="@color/colorBg">

    <ImageView
        android:id="@+id/DPLogo_NCORD"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/ncordlogo"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/patient"
        android:layout_below="@id/DPLogo_NCORD"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/Patient"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="250dp"
        android:text=" रुग्ण (Patient)"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#000"
        android:background="@drawable/textbg"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/doctor"
        android:layout_below="@id/Patient"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/Doctor"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/Patient"
        android:text="डॉक्टर (Doctor)"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/bg_button"/>

</RelativeLayout>