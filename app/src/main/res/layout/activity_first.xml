<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity"
    android:background="@color/colorBg">

    <ImageView
        android:id="@+id/LLogo_NCORD"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/ncordlogo"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp" />


    <EditText
        android:id="@+id/LET_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="आपला ईमेल टाइप करा"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="200dp"
        android:layout_below="@id/LLogo_NCORD"
        android:inputType="textEmailAddress"
        android:textColor="#000"
        android:textColorHint="#000"
        android:paddingStart="10dp"
        android:background="@drawable/bg_edittext"/>


    <EditText
        android:id="@+id/LET_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/LET_email"
        android:layout_marginTop="20dp"
        android:hint="आपला पासवर्ड टाइप करा"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#000"
        android:paddingStart="10dp"
        android:background="@drawable/bg_edittext"/>

    <Button
        android:id="@+id/LBTN_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/LET_password"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        android:text="Login"
        android:textColor="@color/colorWhite"
        android:background="@drawable/bg_button"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/TV_Reg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/LBTN_submit"
        android:text="नोंदणी करा (Register)"
        android:gravity="center"
        android:textSize="18dp"/>


</RelativeLayout>